CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c $< -o $@


clean:
	rm -f $(NAME) *~ .*~
oclean: 
	rm -f $(OBJ)

fclean: 
	rm -f $(OBJECTS) $(NAME) *~ .*~
re: clean all 
